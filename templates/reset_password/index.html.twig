{% extends 'base.html.twig' %}

{% block title %}Hello ResetPasswordController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <h1>Reset your password</h1>

        {{ form_start(resetPassword) }}
        {{ form_row(resetPassword.email) }}
        {{ form_row(resetPassword.plainPassword) }}
        <button class="btn" name="submit">Reset password</button>
        {{ form_end(resetPassword) }}
    </div>
{% endblock %}
